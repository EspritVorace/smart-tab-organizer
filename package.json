{
  "name": "smart-tab-organizer",
  "version": "1.0.1",
  "type": "module",
  "scripts": {
    "test": "vitest run --config vitest.simple.config.ts",
    "test:watch": "vitest --watch --config vitest.simple.config.ts",
    "test:ui": "vitest --ui --config vitest.simple.config.ts",
    "test:wxt": "vitest --config vitest.config.ts",
    "test:legacy": "node tests/runTests.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "dev": "wxt",
    "dev:firefox": "wxt -b firefox",
    "build": "wxt build",
    "build:analyze": "wxt build --analyze",
    "build:firefox": "wxt build -b firefox",
    "zip": "wxt zip",
    "zip:firefox": "wxt zip -b firefox",
    "compile": "tsc --noEmit",
    "postinstall": "wxt prepare",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.1",
    "@storybook/addon-docs": "^9.0.13",
    "@storybook/react-vite": "^9.0.13",
    "@testing-library/react": "^14.3.1",
    "esbuild-wasm": "^0.25.6",
    "happy-dom": "^15.11.7",
    "postcss": "^8.5.6",
    "storybook": "^9.0.13",
    "typescript": "^5.2.2",
    "vitest": "^2.1.8",
    "wxt": "^0.20.13"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.1.1",
    "@radix-ui/react-toast": "^1.2.14",
    "@radix-ui/themes": "^3.2.1",
    "@vitejs/plugin-react": "^4.6.0",
    "lucide-react": "^0.522.0",
    "next-themes": "^0.4.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hook-form": "^7.58.1",
    "zod": "^3.25.67"
  },
  "overrides": {
    "rollup": "npm:@rollup/wasm-node@^4.0.0"
  }
}
